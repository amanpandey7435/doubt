<% layout('./layouts/boilerplateCode') -%>



 
   <div class="main">
    <h1>All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 all" id="class" >
     
     <%for(let listing of listings){%>
         <a href="/listings/<%=listing._id%>" class="listing-link">
             <div class="card1">
                 <img src="<%=listing.image%>" class="card-img-top" class="some" alt="..." style="height: 20rem;">
                 <div class="card-body">
                   <p class="card-text"><b><%=listing.title%></b>
                 <br>
                 
                 &#8377;<%=listing.price%>/night</p>
                   
                 </div>
               </div>
         </a>
        <%}%>
    </div>
   </div>


