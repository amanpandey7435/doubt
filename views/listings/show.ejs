<% layout('./layouts/boilerplateCode') -%>
<div class="row offset-4">
    <h1><%=listing.title%></h1>
    <div class="card" style="width: 390px; height:500px;border: none; width:500px">
        <img src="<%=listing.image%>" class="card-img-top" alt="..." style="height: 20rem;">
        <div class="card-body" style="padding-top: 0.2rem; padding-left:0.5rem ; width:400px">
          <p class="card-text" >
            
            <%=listing.description%> <br>
            &#8377;<%=listing.price%>/night <br>
          </p>
          <div class="btns">
            <form action="/listings/<%=listing._id%>/edit">
                <button  class="btn btn-danger">Edit</button>
            </form>
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
             <button class="btn btn-dark">Delete</button> 
            </form>
           </div>
           
        </div>
     
    </div>
    
</div> 
<hr>
<div class="offset-4 mb-3 mt-3">
  <h4>Leave a Review:</h4>
  <form action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate method="POST">
    <div class="col-5">
      <label for="rating" class="form-label">Rating:</label>
      <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
    </div>
    <div class="col-5">
      <label for="comment" class="form-label">Comments:</label>
     <textarea name="review[comment]"  id="comments" class="form-control" cols="30" rows="10" required></textarea>
     <div class="invalid-feedback">Comments should not be empty</div>
    </div>
    <button class="btn btn-outline-dark mt-3">Submit</button>
  </form>
  
</div>
<hr>
<div class="allreviews offset-3">
  <p><b>All Reviews</b></p>
  
    <%for(let review of listing.reviews){%>
     <div class="row">
      <div class="card col-6 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">Aman Pandey</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%>stars</p>
        </div>
        <form action="/listings/<%=listing.id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
     </div>
      <%}%>

</div>
